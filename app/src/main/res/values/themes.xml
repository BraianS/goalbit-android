<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Goalbit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/secondary_color_alt</item>
        <item name="colorPrimaryDark">@color/secondary_color_alt</item>
        <item name="colorAccent">@color/secondary_color_alt</item>
        <item name="android:statusBarColor">@color/secondary_color_alt</item>>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Base.Theme.Goalbit.NoActionBar">
        ...

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo288x</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Goalbit</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/m3_elevated_chip_background_color</item>
    </style>
</resources>